<Page x:Class="WpfApp1.Org"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Org">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="RussionRoadbtn" Click="RussionRoadbtn_Click" Height="23" Width="200" Content="Дороги россии"
                Background="Goldenrod" BorderThickness="0"/>

            <StackPanel Orientation="Horizontal" Margin="0 25">
                <Button Name="AdminDepbtn" Click="AdminDepbtn_Click" Content="Административный департамент" Height="23"
                Background="Goldenrod" BorderThickness="0"/>
                <Button Name="SmartRoad" Click="SmartRoad_Click" Content="Академия Умные дороги" Height="23" Margin="10 0 0 0"
                    Background="Goldenrod" BorderThickness="0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 25">
                <Button Name="Dogovornoybtn" Click="Dogovornoybtn_Click" Width="170" Content="Договорной отдел" Height="23"
                    Background="Goldenrod" BorderThickness="0"/>
                <Button x:Name="MiddleDepbtn" Click="MiddleDepbtn_Click" Width="170" Content="Общий отдел" Height="23" Margin="10 0 0 0"
                    Background="Goldenrod" BorderThickness="0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Name="LisenceDepbtn" Click="LisenceDepbtn_Click" Width="170" Content="Лицензионный отдел" Height="23"
                    Background="Goldenrod" BorderThickness="0"/>
                <Button Name="Marketingbtn" Click="Marketingbtn_Click" Width="170" Content="Управление маркетинга" Height="23" Margin="10 0 0 0"
                    Background="Goldenrod" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Column="1"  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Name="SVmain" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center">

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
